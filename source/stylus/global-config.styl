/*!
 * == Jeet =====================================================================
 * Set up Jeet
 * =============================================================================
 */

@import "jeet"

$jeet = {
  gutter: 3
  'max-width': $grid.max.width
  'layout-direction': LTR
  'parent-first': false
}

// Page setup ==================================================================

.pg-Wrapper
  center()
  baseline-grid($spacing.base + $spacing.px)

// Shared styleguide ===========================================================

.gl-Styleguide
  background: $color.b

.gl-Wrapper
  clearfix()

// -pppppp = unit((112 / 16), 'rem') // Display 4
// -ppppp  = unit((56 / 16), 'rem')  // h1, Display 3
// -pppp   = unit((45 / 16), 'rem')  // h2, Display 2
// -ppp    = unit((34 / 16), 'rem')  // h3, Display 1
// -pp     = unit((24 / 16), 'rem')  // h4, Headline
// -p      = unit((20 / 16), 'rem')  // h5, Title
//         = unit((16 / 16), 'rem')  // h6, Subheading
// -m      = unit((14 / 16), 'rem')  // Body 1, Body 2, Butto
// -mm     = unit((12 / 16), 'rem')  // Caption

// -pppppp = (24 / 16) // Display 4                         ---- doesn't match (1.5)
// -ppppp  = (24 / 16) // h1, Display 3                     ---- doesn't match (1.5)
// -pppp   = (48 / 45) // h2, Display 2                     ---- matches
// -ppp    = (40 / 34) // h3, Display 1                     ---- matches
// -pp     = (32 / 24) // h4, Headline                      ---- matches
// -p      = (28 / 16) // h6, Subheading 2                  ---- doesn't match (h5)
//         = (24 / 16) // h6, Subheading 1, Caption, Title  ---- doesn't match (1.5)
// -m      = (24 / 14) // Body 2, --Button--                ---- matches
// -mm     = (20 / 14) // Body 1                            ---- doesn't match (caption)

.gl-fontSize
  column(1/3, $cycle: 3)
  max-height: ($spacing.base * 30)
  overflow: hidden
  margin: 0 0 $spacing.base 0

  // h6 has two types:
  // 1. Normal 16px and ((24/16) = 1.5) line-height
  // 2. Big: 16px and ((28/16)) = 1.75) line-height
  // != We use 'h6 size' for basic body,
  //    but in material it can have two line-heights
  font-size: $font.size.base
  line-height: $line.height.p // 28/16

  &-pppppp
    font-size: $font.size.pppppp
    line-height: $line.height.base

  &-ppppp
    font-size: $font.size.ppppp
    line-height: $line.height.base

  &-pppp
    font-size: $font.size.pppp
    line-height: $line.height.pppp

  &-ppp
    font-size: $font.size.ppp
    line-height: $line.height.ppp

  &-pp
    font-size: $font.size.pp
    line-height: $line.height.pp

  &-p
    font-size: $font.size.p
    line-height: $line.height.base

  &-m
    // Body 2, Button,
    font-size: $font.size.m
    line-height: $line.height.m

  &-mm
    // Body 1
    // != caption I think has regular line-height
    // caption is $font.size.m
    font-size: $font.size.m
    line-height: $line.height.mm
