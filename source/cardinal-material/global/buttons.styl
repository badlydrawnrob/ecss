.btn-flat,
input[type="button"].btn-flat,
input[type="submit"].btn-flat
  display: inline-block
  margin: $spacing.quarter
  padding: $spacing.half
  min-width: $spacing.four
  color: $root.text.color
  font-family: $font.family.base
  font-weight: 700
  font-size: $font.size.m
  text-align: center
  text-transform: uppercase
  text-decoration: none
  letter-spacing: normal
  line-height: $line.height.m
  vertical-align: middle
  white-space: nowrap
  cursor: pointer
  background-color: $color.l
  border: 0 none
  border-radius: $border.radius
  box-shadow: none

  &:hover
    background-color: $color.lll
  &:active
    background-color: $color.llll
  &:active:focus
    outline: 0 none
  &:disabled
    color: $color.bb
    cursor: not-allowed
    pointer-events: none
    box-shadow: none
    text-shadow: none


.btn-floating,
input[type="button"].btn-floating,
input[type="submit"].btn-floating
  display: inline-block
  height: ($spacing.three + $spacing.half)
  width: ($spacing.three + $spacing.half)
  margin: $spacing.quarter
  padding: $spacing.half
  text-align: center
  text-decoration: none
  vertical-align: middle
  white-space: nowrap
  cursor: pointer
  background-color: $color.lll
  border: 0 none
  border-radius: 50%
  box-shadow: 0 1px 3px alpha(#000, 12%), 0 1px 2px alpha(#000, 24%)

  &:hover
    background-color: $color.lll
  &:active
    background-color: $color.llll
    box-shadow: 0 3px 6px alpha(#000, 16%), 0 3px 6px alpha(#000, 23%)
  &:active:focus
    outline: 0 none
  &:disabled
    color: $color.bb
    text-shadow: none
    cursor: not-allowed
    pointer-events: none
    box-shadow: none


